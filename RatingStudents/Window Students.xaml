<Window x:Class="RatingStudents.Window_Students"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RatingStudents"
        mc:Ignorable="d"
        Title="Window_Students" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Base">
                <MenuItem Header="Select"/>
                <MenuItem Header="Isert"/>
                <MenuItem Header="Update"/>
                <MenuItem Header="Delete"/>
                <MenuItem Header="Clear"/>
            </MenuItem>
                <MenuItem Header="Window">
                    <MenuItem Header="Window Subjects" x:Name="miWindowSubject" Click="miWindowSubject_Click"/>
                    <MenuItem Header="Window Ratings"/>
            </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="Tools"/>
                    <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="50,50,0,0">
            <StackPanel>
                <TextBox Width="200" Margin="0,0,0,10" x:Name="tbFirstName"/>
                <TextBox Width="200" Margin="0,0,0,10" x:Name="tbSecondName"/>
                <TextBox Width="200" Margin="0,0,0,10" x:Name="tbPatronymic"/>
                <TextBox Width="200" Margin="0,0,0,10" x:Name="tbAdress"/>
                <TextBox Width="200" Margin="0,0,0,10" x:Name="tbSubject"/>
            </StackPanel>
            <StackPanel>

                <Label Content="First Name" Margin="10,0,0,0"/>
                <Label Content="Second Name" Margin="10,0,0,0"/>
                <Label Content="Patronymic" Margin="10,0,0,0"/>
                <Label Content="Adress" Margin="10,0,0,0"/>
                <Label Content="Subject" Margin="10,0,0,0"/>
            </StackPanel>
            <DataGrid Height="350" Width="430" Margin="10,-35,0,0"/>
        </StackPanel>
    </Grid>
</Window>
